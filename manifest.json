{
  "manifest_version": 3,
  "name": "BobRossRocks",
  "version": "1.0.0",
  "description": "BobRossRocks - Custom YouTube Popup Extension",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}

