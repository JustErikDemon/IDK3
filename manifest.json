{
  "manifest_version": 3,
  "name": "BobRossRocks",
  "version": "1.0.0",
  "description": "BobRossRocks - Custom YouTube Popup Extension",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
